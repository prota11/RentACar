@model IEnumerable<RentACar.Models.VehicleGroup>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />

<h2>Vehicle Groups</h2>
<p>
    @Html.ActionLink("New Vehicle Group", "New", "VehicleGroups", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>No Vehicle Groups yet.</p>
}
else
{
    <table id="groups" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Vehicle Group</th>
                <th>Description</th>
                <th>Price Per Day</th>
                <th>CRUD</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Edit", "VehicleGroups", new { id = item.Id }, null)</td>
                    <td>@item.Description</td>
                    <td>@item.PricePerDay€</td>
                    <td>@Html.ActionLink("Delete", "Delete", "VehicleGroups", new { id = item.Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts{
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#groups').DataTable();
        });
    </script>
}