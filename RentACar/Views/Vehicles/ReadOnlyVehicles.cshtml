@model IEnumerable<RentACar.Models.Vehicle>
@{
    ViewBag.Title = "ReadOnlyVehicles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />

<h2>Our Fleet</h2>
@if (!Model.Any())
{
    <p>No Vehicles yet.</p>
}
else
{
    <table id="vehicles" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Fuel</th>
                <th>Seats</th>
                <th>Gearbox</th>
                <th>Available</th>
                <th>Vehicle Type</th>
                <th>Vehicle Group</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Make</td>
                    <td>@item.Model</td>
                    <td>@item.Fuel</td>
                    <td>@item.Seats</td>
                    <td>@item.Gearbox</td>
                    <td>@item.Quantity</td>
                    <td>@item.VehicleType.Name</td>
                    <td>@item.VehicleGroup.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts{
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#vehicles').DataTable();
        });
    </script>
}