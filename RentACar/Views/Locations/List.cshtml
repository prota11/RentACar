@model IEnumerable<RentACar.Models.Location>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Locations</h2>
<p>
    @Html.ActionLink("New Location", "New", "Locations", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>No Locations yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Place</th>
                <th>City</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Place, "Edit", "Locations", new { id = item.Id }, null)</td>
                    <td>@item.City</td>
                    <td>@item.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
