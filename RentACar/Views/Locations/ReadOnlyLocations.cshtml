@model IEnumerable<RentACar.Models.Location>

@{
    ViewBag.Title = "ReadOnlyLocations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Locations</h2>

@if (!Model.Any())
{
    <p>No Locations yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Place</th>
                <th>City</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Place</td>
                    <td>@item.City</td>
                    <td>@item.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
